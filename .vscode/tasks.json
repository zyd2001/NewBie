{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "utility_build",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g",
                "${file}",
                "utility.c",
                "-o",
                "${fileBasenameNoExtension}.out"
            ]
        },
        {
            "taskName": "build",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g",
                "main.c",
                "utility.c",
                "y.tab.c",
                "lex.yy.c",
                "compile.c",
                "-ll"
            ]
        }
    ]
}